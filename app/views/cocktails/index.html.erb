<%= render 'shared/home-banner' %>

<ul>
  <li>
    <h1>Cocktails
    <%= link_to new_cocktail_path do %>
      <i class="fas fa-plus add"></i>
    <% end %>
    </h1>
  </li>
</ul>


<div class="card-container">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail) do %>
      <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.3) 50%), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-category">Cocktail #<%= cocktail.id %></div>
        <div class="card-title">
          <h2> <%= cocktail.name %> </h2>
        </div>
        <div class="card-description">
          <% cocktail.doses.each do |dose| %>
            <p><%= dose.ingredient.name %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


